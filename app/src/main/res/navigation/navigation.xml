<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation"
        app:startDestination="@id/noticeFragment">

    <fragment
            android:id="@+id/infoFragment"
            android:name="com.bogiruapps.rdshapp.info.InfoFragment"
            android:label="fragment_info"
            tools:layout="@layout/fragment_info" />
    <fragment
            android:id="@+id/eventsFragment"
            android:name="com.bogiruapps.rdshapp.events.EventsFragment"
            android:label="Мероприятия"
            tools:layout="@layout/fragment_events">
        <action
                android:id="@+id/action_eventsFragment_to_eventEditFragment"
                app:destination="@id/eventEditFragment" />
        <action
                android:id="@+id/action_eventsFragment_to_eventDetailFragment"
                app:destination="@id/eventDetailFragment"
                app:enterAnim="@anim/fui_slide_in_right" />
    </fragment>
    <fragment
            android:id="@+id/choseSchoolFragment"
            android:name="com.bogiruapps.rdshapp.school.ChooseSchoolFragment"
            android:label="Выбор школы"
            tools:layout="@layout/fragment_choose_school" >
        <action
                android:id="@+id/action_choseSchoolFragment_to_noticeFragment"
                app:destination="@id/noticeFragment"
                app:popUpTo="@+id/navigation" />
    </fragment>
    <fragment
            android:id="@+id/noticeFragment"
            android:name="com.bogiruapps.rdshapp.notice.NoticeFragment"
            android:label="Объявления" >
        <action
                android:id="@+id/action_noticeFragment_to_noticeDetailFragment"
                android:label="Описание"
                app:destination="@id/noticeDetailFragment"
                app:enterAnim="@anim/fui_slide_in_right"
                app:exitAnim="@anim/fui_slide_out_left"
                app:launchSingleTop="false"
                app:popUpTo="@+id/noticeFragment"
                app:popUpToInclusive="false" />
        <action
                android:id="@+id/action_noticeFragment_to_noticeEditFragment"
                app:destination="@id/noticeEditFragment"
                app:popUpTo="@+id/noticeFragment"
                app:popUpToInclusive="false" />
        <action
                android:id="@+id/action_noticeFragment_to_choseSchoolFragment"
                app:destination="@id/choseSchoolFragment"
                app:popUpTo="@+id/navigation" />
    </fragment>
    <fragment
            android:id="@+id/eventEditFragment"
            android:name="com.bogiruapps.rdshapp.events.edit_event.EventEditFragment"
            android:label="Выбор школы"
            tools:layout="@layout/fragment_event_edit">
        <action
                android:id="@+id/action_eventEditFragment_to_eventsFragment"
                app:destination="@id/eventsFragment"
                app:popUpTo="@+id/noticeFragment" />
    </fragment>
    <fragment
            android:id="@+id/noticeEditFragment"
            android:name="com.bogiruapps.rdshapp.notice.notice_edit.NoticeEditFragment"
            android:label="Информация об объявлении"
            tools:layout="@layout/fragment_notice_edit" >
        <action
                android:id="@+id/action_noticeEditFragment_to_noticeFragment"
                app:destination="@id/noticeFragment"
                app:popUpTo="@+id/navigation" />
    </fragment>
    <fragment
            android:id="@+id/tasksEventFragment"
            android:name="com.bogiruapps.rdshapp.events.tasksEvent.TasksEventFragment"
            android:label="Задачи">
        <action
                android:id="@+id/action_tasksEventFragment_to_taskEventEditFragment"
                app:destination="@id/taskEventEditFragment" />
    </fragment>
    <fragment
            android:id="@+id/noticeDetailFragment"
            android:name="com.bogiruapps.rdshapp.notice.notice_detail.NoticeDetailFragment">
        <action
                android:id="@+id/action_noticeDetailFragment_to_noticeEditFragment"
                app:destination="@id/noticeEditFragment"
                app:popUpTo="@+id/noticeDetailFragment"
                app:popUpToInclusive="true" />
        <action
                android:id="@+id/action_noticeDetailFragment_to_noticeFragment"
                app:destination="@id/noticeFragment"
                app:popUpTo="@+id/navigation" />
    </fragment>
    <fragment
            android:id="@+id/taskEventEditFragment"
            android:name="com.bogiruapps.rdshapp.events.tasksEvent.taskEventEdit.TaskEventEditFragment"
            android:label="Редактирование">
        <action
                android:id="@+id/action_taskEventEditFragment_to_tasksEventFragment"
                app:destination="@id/tasksEventFragment"
                app:popUpTo="@+id/eventsFragment" />
    </fragment>
    <fragment
            android:id="@+id/eventDetailFragment"
            android:name="com.bogiruapps.rdshapp.events.detail_event.EventDetailFragment"
            android:label="Подробности">
        <action
                android:id="@+id/action_eventDetailFragment_to_eventEditFragment"
                app:destination="@id/eventEditFragment" />
        <action
                android:id="@+id/action_eventDetailFragment_to_tasksEventFragment"
                app:destination="@id/tasksEventFragment"
                app:popUpTo="@+id/eventsFragment" />
        <action
                android:id="@+id/action_eventDetailFragment_to_eventsFragment"
                app:destination="@id/eventsFragment"
                app:popUpTo="@+id/noticeFragment" />
    </fragment>
    <fragment
            android:id="@+id/usersFragment"
            android:name="com.bogiruapps.rdshapp.rating.RatingFragment"
            android:label="UsersFragment" />
    <fragment
            android:id="@+id/userFragment"
            android:name="com.bogiruapps.rdshapp.user.UserFragment"
            android:label="fragment_user"
            tools:layout="@layout/fragment_user" >
        <action
                android:id="@+id/action_userFragment_to_choseSchoolFragment"
                app:destination="@id/choseSchoolFragment" />
    </fragment>
    <fragment
            android:id="@+id/eventChatRoomFragment"
            android:name="com.bogiruapps.rdshapp.events.chat_room_event.EventChatRoomFragment"
            android:label="EventChatRoomFragment" />
    <fragment
            android:id="@+id/chatsFragment"
            android:name="com.bogiruapps.rdshapp.chats.ChatsFragment"
            android:label="Чаты" />
</navigation>